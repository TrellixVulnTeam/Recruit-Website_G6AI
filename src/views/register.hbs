<div class="main" style="height:100vh; background-image: linear-gradient(to right, #780206
, #061161);">
    <section class="signup" style="
    position: absolute;
    top: 45%;
    left: 50%;
    width:500px;
    background-color:#fff;
    transform: translate(-50%, -50%);
">
            <div class="container text-center" style="padding: 40px;">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title" style="
                                padding-top: 10px;
                                padding-bottom: 20px;
                        ">Đăng ký</h2>
                        <form method="POST" class="register-form" id="register-form" action="/register">
                            <div class="form-group">
                                <input type="text" name="name" id="name" placeholder="Your Name" style="width: 250px;"/>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" id="email" placeholder="Your Email" style="width: 250px;"/>
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" id="pass" placeholder="Password" style="width: 250px;"/>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit-btn" value="Đăng ký" style="padding: 5px 25px;"/>
                            </div>
                        </form>

                            <div class="form-group form-button">
                                <a href="/login" class="signup-image-link">Trở lại đăng nhập</a>
                            </div> 
                
                    </div>
                  
                </div>
            </div>
        </section>
</div>