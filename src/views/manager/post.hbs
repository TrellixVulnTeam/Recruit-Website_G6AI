<section id="header">
        {{> header_manager}}
    </section>


<div class="post-wrapper">
    <div class="container post-container" style="background-color:#fff !important; padding: 30px 100px 178px ;">
        <h2 class="text-center mb-5">Vui lòng điền đầy đủ thông tin</h2>
            <form action="/manager/post" id="post-form" method="POST">
                    <div class="form-group my-3">
                        <p><b>Nhập tên:</b></p>
                        <input type="text" id="input-name" class="post-name w-50" name="namecity" placeholder="Tên cá nhân hoặc tên công ty" autocomplete="off" >
                    </div>
                      <div class="form-group my-3">
                        <p><b>Nhập tên công việc:</b></p>
                        <input type="text" id="input-name" class="post-name-job w-50" name="namejob" placeholder="Nhập tên công việc" autocomplete="off" >
                    </div>
                    <div class="form-group my-3">
                        <p><b>Nhập email:</b></p>
                        <input type="text" id="input-email" class="post-email w-50" name="email" placeholder="VD: hieu@gmail.com" autocomplete="off" >
                    </div>
                    <div class="form-group my-3">
                        <p><b>Nhập số điện thoai:</b></p>
                        <input type="text" id="input-number" class="post-number w-50" name="number" placeholder="" autocomplete="off" >
                    </div>
                    <div class="form-group my-4">
                         <p style="display:inline-block;"><b>Chọn địa điểm:</b></p>
                         <select id="form-post-location" name="location" class="form-search-combobox height-40 border-radius4 " style="border:1px solid #DDDDDD">
                                    <option value="Ho Chi Minh">Ho Chi Minh</option>
                                    <option value="Ha Noi">Ha Noi</option>
                                    <option value="Da Nang">Da Nang</option>
                        </select>
                    </div>
                    <div class="form-group my-3">
                        <p><b>Nhập mức lương:</b></p>
                        <input type="text" id="input-money" name="money" class="post-money w-50" placeholder="VD: 200$ - 1000$" autocomplete="off" >
                    </div>
                    <div class="form-group my-3">
                        <p><b>Nhập từ khóa liên quan:</b></p>
                        <input type="text" id="input-time" name="keyword" class="post-key w-50" placeholder="VD: Nodejs, Reactjs" autocomplete="off" >
                    </div>
                    <div class="form-group my-3">
                        <p><b>Nhập mô tả công việc:</b></p>
                        <textarea id="input-" rows="12" cols="50" class="w-100" name="description" autocomplete="off" ></textarea>
                    </div>
                    <div class="form-group my-3">
                        <p><b>Nhập yêu cầu công việc:</b></p>
                        <textarea id="input-" rows="12" cols="50" class="w-100" name="skill" autocomplete="off" ></textarea>
                    </div>
                    <div class="form-group mt-5">
                        <button type="submit" id="btn-post-form" class="search-form-submit">
                            <div class="search-form-submit-icon">
                                Đăng bài
                            </div>
                        </button>
                    </div>
            </form>
    </div>
</div>

