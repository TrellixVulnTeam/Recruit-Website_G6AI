<section id="header">
        {{> header_user}}
    </section>


<div class="table-content">

            <table class="table">
        <h2 class="manager-title text-center">Danh sách tài khoản ứng tuyển</h2>
        <thead class="thead-dark ">
            <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-center">Email</th>
            <th scope="col" class="text-center">Số điện thoại</th>
            <th scope="col" class="text-center">Link CV</th>
            <th scope="col" class="text-center">Xử lý</th>
            </tr>
        </thead>
        <tbody class="bg-white">
           {{#each Job.user_apply}}
                 <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td class="text-center">{{this.userEmail}}</td>
                    <td class="text-center">0{{this.userNumber}}</td>
                    <td class="text-center">{{this.userLinkCV}}</td>
          
                    <td class="text-center">  
                        <a href="/{{../Job._id}}/{{this._id}}/delete_user_apply"><i class="fa-solid fa-trash-can"></i>Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
        </table>
</div>



<footer>
        {{> footer}}
</footer>