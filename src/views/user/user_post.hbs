<section id="header">
        {{> header_user}}
    </section>


<div class="table-content">

        <table class="table">
        <h2 class="manager-title text-center">Danh sách công việc</h2>
        <thead class="thead-dark">
            <tr>
            <th scope="col">#</th>
            <th scope="col" class="text-center">Tên công việc</th>
            <th scope="col" class="text-center">Ngày đăng</th>
            <th scope="col" class="text-center">Xử lý</th>
            </tr>
        </thead>
        <tbody class="bg-white">
           {{#each Jobs}}
                 <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td class="text-center">{{this.namejob}}</td>
                    <td class="text-center">{{this.createdAt}}</td>
                    <td class="text-center">
                        <a class="mr-2" href="/{{this._id}}/user_apply_page"><i class="fa-solid fa-user"></i>Người ứng tuyển</a>
                        <a class="mr-2" href="/{{this._id}}/edit_post_page"><i class="fa-solid fa-pen-to-square"></i>Sửa</a>
                        <a class="mr-2" href="/search/{{this._id}}/detail"><i class="fa-solid fa-eye"></i>Xem</a>
                        <a href="/{{this._id}}/delete_post"><i class="fa-solid fa-trash-can"></i>Xóa</a>
                    </td>
                </tr>
           {{/each}}
        </tbody>
        </table>
</div>



<footer>
        {{> footer}}
</footer>